<main class="form-signin">
    <form>
        <h4>Personal Details</h4>
        <div class="form-floating">
            <input type="text" class="form-control" id="firstname" placeholder="John">
            <label for="firstname">First Name</label>
        </div>
        <div class="form-floating">
            <input type="text" class="form-control" id="lastname" placeholder="Willam">
            <label for="lastname">Enter Last Name</label>
        </div>
        <div class="form-floating">
            <input type="text" class="form-control" id="licensenumber" pattern="[a-zA-Z0-9]{8}" title="Please enter 8 alphanumeric characters" required>
            <label for="licensenumber">License Number</label>
        </div>
        <div class="form-floating">
            <input type="number" class="form-control" id="age" placeholder="30">
            <label for="age">Age</label>
        </div>
        <div class="form-floating">
            <input type="date" class="form-control" id="dob">
            <label for="dob">DOB</label>
        </div>

        <h4>Car Details</h4>
        <div class="form-floating">
            <input type="text" class="form-control" id="iemake">
            <label for="iemake">ie Make</label>
        </div>
        <div class="form-floating">
            <input type="text" class="form-control" id="model">
            <label for="model">Model</label>
        </div>
        <div class="form-floating">
            <input type="date" class="form-control" id="year">
            <label for="year">Year</label>
        </div>
        <div class="form-floating">
            <input type="text" class="form-control" id="platnumber">
            <label for="platnumber">Plat Number</label>
        </div>
        
    
        <button class="w-100 btn btn-lg btn-primary" type="submit">Submit</button>
    
    </form>
</main>
 
    
